<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".EventEditFragment"
    android:background="@drawable/background_add">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="25dp"
        android:orientation="vertical"
        android:gravity="center">
        <Spinner
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/background_wh_spinner"
            android:id="@+id/sp_event"
            android:gravity="center"
            android:popupBackground="#ffffff"
            android:textColor="#184A2C"
            android:overlapAnchor="false"
            android:popupElevation="10dp"
            android:spinnerMode="dropdown"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:text="Title"
        android:textSize="20sp"
        android:id="@+id/tv_event_title"
        android:textAlignment="center"
        android:fontFamily="@font/poppins_bold"
        android:textColor="#184A2C"/>

    <EditText
        android:id="@+id/eventNameET"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textSize="15dp"
        android:gravity="center"
        android:textColor="@color/black"
        android:ems="10"
        android:background="@drawable/edge_infotxtbox"
        android:padding="10dp"
        android:fontFamily="@font/poppins_semibold"
        android:inputType="text"/>


    <TextView
        android:id="@+id/eventDateTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:text="Date"
        android:textSize="20sp"
        android:fontFamily="@font/poppins_bold"
        android:textAlignment="center"
        android:textColor="#184A2C"/>


    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:background="@drawable/edge_btn"
        android:id="@+id/btn_save"
        android:text="Save"
        android:fontFamily="@font/poppins_bold"
        android:textColor="@color/white"
        android:textSize="20sp" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>